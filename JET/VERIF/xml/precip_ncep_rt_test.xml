    <jobname>HRRR_OPER_precip_init</jobname>
    <join><cyclestr offset="-10800">&HRRR_OPER_LOG_DIR;/HRRR_OPER_precip_init@Y@m@d@H.log</cyclestr></join>

    &PE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/NCEP_init_precip_verif.py</value>
    </envar>
    <envar>
      <name>MODELDIR</name>
      <value>&HRRR_OPER_DIR;</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
