      <value>&HRRRE_N_MASK;</value>
    </envar>
    <envar>
      <name>NSSLMASK</name>
      <value>&NSSL_MASK;</value>
    </envar>
    <envar>
      <name>INTERPEXEC</name>
      <value>cref_interp_hrrre</value>
    </envar>
    <envar>
      <name>NCLSCRIPT</name>
      <value>plot_cref.ncl</value>
