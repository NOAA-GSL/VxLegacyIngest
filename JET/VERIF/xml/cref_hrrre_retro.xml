    <envar>
      <name>SCRIPTDIR</name>
      <value>&SCRIPT_DIR;</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&OBS_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>OBSDIR</name>
      <value>&OBS_DIR;</value>
    </envar>
    <envar>
      <name>HRRREMASK_C</name>
      <value>&HRRRE_C_MASK;</value>
    </envar>
    <envar>
      <name>HRRREMASK_S</name>
      <value>&HRRRE_S_MASK;</value>
