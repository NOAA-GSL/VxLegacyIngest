    <!ENTITY HRRRE_C_MASK "/lfs3/projects/amb-verif/verif/mask/hrrre_c_hgt_mask.nc"> 
    <!ENTITY HRRRE_S_MASK "/lfs3/projects/amb-verif/verif/mask/hrrre_s_hgt_mask.nc"> 
    <!ENTITY HRRRE_SE_MASK "/lfs3/projects/amb-verif/verif/mask/hrrre_se_hgt_mask.nc"> 
    <!ENTITY HRRRE_NE_MASK "/lfs3/projects/amb-verif/verif/mask/hrrre_ne_hgt_mask.nc"> 
