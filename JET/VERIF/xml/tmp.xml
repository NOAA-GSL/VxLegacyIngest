    <jobname>cref_db</jobname>
    <join><cyclestr>&WF_LOG_DIR;/cref_db_@Y@m@d@H.log</cyclestr></join>
        
    &SERVICE_OPTS;
    &YMDH;
        
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>LINES</name>
      <value>114</value>
    </envar>
    <envar>
      <name>MODELDIRS</name>
      <value>HRRR/realtime RAP/realtime RUC/realtime</value>
    </envar>
    <envar>
      <name>MODELNAMES</name>
      <value>HRRR RAP RUC</value>
    </envar>
    <envar>
      <name>GRIDS</name>
      <value>03km 13km 20km 40km 80km</value>
    </envar>
  
  </task>

</workflow>
