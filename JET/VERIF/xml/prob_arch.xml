    </envar>
    <envar>
      <name>GRIDDIR</name>
      <value>&OBS_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>VERIFDIR</name>
      <value>NCWD</value>
    </envar>
  </task>
-->
  <task name="RCPF_prob_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>RCPF_prob_arch</jobname>
    <join><cyclestr offset="-432000">&RCPF_LOG_DIR;/RCPF_prob_arch@Y@m@d@H.log</cyclestr></join>
    
    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/prob_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/RCPF</value>
    </envar>
    <envar>
      <name>GRIDDIR</name>
      <value>&RCPF_GRID_DIR;</value>
    </envar>
    <envar>
      <name>VERIFDIR</name>
      <value>&RCPF_verif_DIR;</value>
    </envar>
  </task>

  <task name="CCFP_prob_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>CCFP_prob_arch</jobname>
    <join><cyclestr offset="-432000">&CCFP_LOG_DIR;/CCFP_prob_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/prob_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/CCFP</value>
    </envar>
    <envar>
      <name>GRIDDIR</name>
      <value>&CCFP_GRID_DIR;</value>
    </envar>
    <envar>
      <name>VERIFDIR</name>
      <value>&CCFP_verif_DIR;</value>
    </envar>
  </task>

  <task name="LLProb_prob_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>LLProb_prob_arch</jobname>
    <join><cyclestr offset="-432000">&LLProb_LOG_DIR;/LLProb_prob_arch@Y@m@d@H.log</cyclestr></join>
    
    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/prob_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/LLProb</value>
    </envar>
    <envar>
      <name>GRIDDIR</name>
      <value>&LLProb_GRID_DIR;</value>
    </envar>
    <envar>
      <name>VERIFDIR</name>
      <value>&LLProb_verif_DIR;</value>
    </envar>
  </task>

