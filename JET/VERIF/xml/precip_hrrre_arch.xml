<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [
    <!ENTITY SCRIPT_DIR "/home/amb-verif/VERIF/bin">
    <!ENTITY EXEC_DIR "/home/amb-verif/VERIF/exec">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/VERIF/verif/precip/log">
    <!ENTITY MSS_DIR "/BMC/rtrr/5year/amb-verif/verif/precip">
    <!ENTITY WEB_DIR "/home/amb-verif/VERIF/verif/web">
    
    <!ENTITY HRRRE_VERIF_DIR "/home/amb-verif/VERIF/verif/precip/HRRREvStageIV/realtime">
    <!ENTITY HRRRE_GRID_DIR "/home/amb-verif/VERIF/verif/precip/HRRRE/realtime">
    <!ENTITY HRRRE_LOG_DIR "/home/amb-verif/VERIF/verif/precip/HRRRE/log">
 
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY WALL_LIMIT "06:00:00">
    
    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&WALL_LIMIT;</walltime>'>
    
    <!ENTITY YMDH
	   '<envar>
	      <name>YEAR</name>
	      <value><cyclestr offset="-432000">@Y</cyclestr></value>
	    </envar>
	    <envar>
	      <name>MONTH</name>
	      <value><cyclestr offset="-432000">@m</cyclestr></value>
	    </envar>
	    <envar>
	      <name>DAY</name>
	      <value><cyclestr offset="-432000">@d</cyclestr></value>
	    </envar>
	    <envar>
	      <name>HOUR</name>
	      <value><cyclestr offset="-432000">@H</cyclestr></value>
	    </envar>'>

     <!ENTITY YMDH15
            '<envar>
               <name>YEAR</name>
               <value><cyclestr offset="-1296000">@Y</cyclestr></value>
             </envar>
             <envar>
               <name>MONTH</name>
               <value><cyclestr offset="-1296000">@m</cyclestr></value>
             </envar>
             <envar>
               <name>DAY</name>
               <value><cyclestr offset="-1296000">@d</cyclestr></value>
             </envar>
             <envar>
               <name>HOUR</name>
               <value><cyclestr offset="-1296000">@H</cyclestr></value>
             </envar>'>

<!--Need to keep more observation files on disk (15 days) for medium range forecast verification-->

]>

<workflow realtime="T" scheduler="slurm" cyclethrottle="2" cyclelifespan="1:00:00:00">

  <log><cyclestr>&WF_LOG_DIR;/precip_arch_workflow_@Y@m@d@H.log</cyclestr></log>

  <cycledef group="1dy">0 0 * * 2013-2020 *</cycledef>

  <task name="HRRRE_precip_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>HRRRE_precip_arch</jobname>
    <join><cyclestr offset="-432000">&HRRRE_LOG_DIR;/HRRRE_precip_arch@Y@m@d@H.log</cyclestr></join>
    
    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/precip_arch.py</value>
    </envar>
    <envar>
      <name>WEBDIR</name>
      <value>&WEB_DIR;/hrrre</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/HRRRE</value>
    </envar>
    <envar>
      <name>GRIDDIR</name>
      <value>&HRRRE_GRID_DIR;</value>
    </envar>
    <envar>
      <name>VERIFDIR</name>
      <value>&HRRRE_VERIF_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&HRRRE_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

</workflow>
