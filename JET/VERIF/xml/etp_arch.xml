<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/VERIF/bin">
    <!ENTITY EXEC_DIR "/home/amb-verif/VERIF/exec">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/VERIF/verif/etp/log">
    <!ENTITY MSS_DIR "/BMC/rtrr/5year/amb-verif/verif/etp">
    <!ENTITY MAIN_DIR "/home/amb-verif/VERIF/verif/etp">
    <!ENTITY WEB_DIR "/home/amb-verif/VERIF/verif/web">
    
    <!ENTITY OBS_REALTIME_DIR "/home/amb-verif/VERIF/verif/etp/NSSL/realtime">
    <!ENTITY OBS_LOG_DIR "/home/amb-verif/VERIF/verif/etp/NSSL/log">
    
    <!ENTITY HRRR_REALTIME_DIR "/home/amb-verif/VERIF/verif/etp/HRRR/realtime">
    <!ENTITY HRRR_LOG_DIR "/home/amb-verif/VERIF/verif/etp/HRRR/log">

    <!ENTITY HRRRV2_REALTIME_DIR "/home/amb-verif/VERIF/verif/etp/HRRRV2/realtime">
    <!ENTITY HRRRV2_LOG_DIR "/home/amb-verif/VERIF/verif/etp/HRRRV2/log">

    <!ENTITY HRRR_OPER_REALTIME_DIR "/home/amb-verif/VERIF/verif/etp/HRRR_OPER/realtime">
    <!ENTITY HRRR_OPER_LOG_DIR "/home/amb-verif/VERIF/verif/etp/HRRR_OPER/log">
    
    <!ENTITY NAM_NEST_REALTIME_DIR "/home/amb-verif/VERIF/verif/etp/NAM_NEST/realtime">
    <!ENTITY NAM_NEST_LOG_DIR "/home/amb-verif/VERIF/verif/etp/NAM_NEST/log">
    
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY WALL_LIMIT "06:00:00">
    
    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&WALL_LIMIT;</walltime>'>
    
    <!ENTITY YMDH
	   '<envar>
	      <name>YEAR</name>
	      <value><cyclestr offset="-432000">@Y</cyclestr></value>
	    </envar>
	    <envar>
	      <name>MONTH</name>
	      <value><cyclestr offset="-432000">@m</cyclestr></value>
	    </envar>
	    <envar>
	      <name>DAY</name>
	      <value><cyclestr offset="-432000">@d</cyclestr></value>
	    </envar>
	    <envar>
	      <name>HOUR</name>
	      <value><cyclestr offset="-432000">@H</cyclestr></value>
	    </envar>'>
]>

<workflow realtime="T" scheduler="slurm" cyclethrottle="2" cyclelifespan="1:00:00:00">

  <log><cyclestr>&WF_LOG_DIR;/etp_arch_workflow_@Y@m@d@H.log</cyclestr></log>

  <cycledef group="1dy">0 0 * * 2023-2029 *</cycledef>

  <task name="NSSL_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>NSSL_arch</jobname>
    <join><cyclestr offset="-432000">&OBS_LOG_DIR;/NSSL_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/cref_etp_vil_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/NSSL</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&OBS_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&OBS_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

  <task name="HRRR_etp_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>HRRR_etp_arch</jobname>
    <join><cyclestr offset="-432000">&HRRR_LOG_DIR;/HRRR_etp_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/cref_etp_vil_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/HRRR</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&HRRR_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&HRRR_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

  <task name="HRRRV2_etp_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>HRRRV2_etp_arch</jobname>
    <join><cyclestr offset="-432000">&HRRRV2_LOG_DIR;/HRRRV2_etp_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/cref_etp_vil_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/HRRRV2</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&HRRRV2_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&HRRRV2_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

 <task name="HRRR_OPER_etp_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>HRRR_OPER_etp_arch</jobname>
    <join><cyclestr offset="-432000">&HRRR_OPER_LOG_DIR;/HRRR_OPER_etp_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/cref_etp_vil_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/HRRR_OPER</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&HRRR_OPER_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&HRRR_OPER_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

  <task name="NAM_NEST_etp_arch" cycledefs="1dy" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>NAM_NEST_etp_arch</jobname>
    <join><cyclestr offset="-432000">&NAM_NEST_LOG_DIR;/NAM_NEST_etp_arch@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/cref_etp_vil_arch.py</value>
    </envar>
    <envar>
      <name>MSSDIR</name>
      <value>&MSS_DIR;/NAM_NEST</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&NAM_NEST_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>LOGDIR</name>
      <value>&NAM_NEST_LOG_DIR;</value>
    </envar>
    <envar>
      <name>WFLOGDIR</name>
      <value>&WF_LOG_DIR;</value>
    </envar>
  </task>

</workflow>
