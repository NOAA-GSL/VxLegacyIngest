        </envar>
        <envar>
          <name>HOUR</name>
          <value><cyclestr offset="-43200">@H</cyclestr></value>
        </envar>'>

    <!ENTITY YMDH_1hr
       '<envar>
          <name>YEAR</name>
          <value><cyclestr offset="-3600">@Y</cyclestr></value>
        </envar>
        <envar>
          <name>MONTH</name>
          <value><cyclestr offset="-3600">@m</cyclestr></value>
        </envar>
        <envar>
          <name>DAY</name>
          <value><cyclestr offset="-3600">@d</cyclestr></value>
        </envar>
        <envar>
          <name>HOUR</name>
          <value><cyclestr offset="-3600">@H</cyclestr></value>
        </envar>'>
]>

<workflow realtime="F" scheduler="slurm" cyclethrottle="6" cyclelifespan="0:03:00:00">

  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <cycledef group="1hr">202208030000 202208060000 1:00:00</cycledef>

  <task name="NSSL_interp" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>NSSL_interp</jobname>
    <join><cyclestr offset="-3600">&OBS_LOG_DIR;/NSSL_interp@Y@m@d@H.log</cyclestr></join>
    
    &PE_OPTS;    
    &YMDH_1hr;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/NSSL_interp_new.py</value>
    </envar>
    <envar>
      <name>EXECDIR</name>
      <value>&EXEC_DIR;</value>
    </envar>
    <envar>
      <name>SCRIPTDIR</name>
      <value>&SCRIPT_DIR;</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&OBS_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>OBSDIR</name>
      <value>&OBS_DIR;</value>
    </envar>
    <envar>
      <name>HRRRMASK</name>
      <value>&HRRR_MASK;</value>
    </envar>
    <envar>
      <name>NSSLMASK</name>
      <value>&NSSL_MASK;</value>
    </envar>
    <envar>
      <name>INTERPEXEC</name>
      <value>cref_new_interp</value>
    </envar>
    <envar>
      <name>NCLSCRIPT</name>
      <value>plot_cref.ncl</value>
    </envar>
    <envar>
      <name>NSSLVAR</name>
      <value>MergedReflectivityQCComposite</value>
    </envar>
    <envar>
      <name>GRIB2VAR</name>
      <value>:MergedReflectivityQCComposite:</value>
    </envar>
    <envar>
      <name>OBSVAR</name>
      <value>MergedReflectivityQCComposite_500mabovemeansealevel</value>
    </envar>
    <envar>
      <name>NC_OBSVAR</name>
      <value>cref</value>
