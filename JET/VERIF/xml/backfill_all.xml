<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/VERIF/bin">
    <!ENTITY EXEC_DIR "/home/amb-verif/VERIF/exec">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/VERIF/verif/log">
    
    <!ENTITY MAIN_DIR "/home/amb-verif/VERIF/verif">
    <!ENTITY HPSS_DIR "/BMC/rtrr/5year/amb-verif/verif/">
    
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE "batch">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY PE_WALL_LIMIT "00:59:00">
    <!ENTITY SERVICE_WALL_LIMIT "00:59:00">
    <!ENTITY DEADLINE "5400">
    <!ENTITY WAIT "3600">

    <!ENTITY PE_OPTS 
       '<account>&PROJECT;</account>
        <queue>&PE;</queue>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&PE_WALL_LIMIT;</walltime>
	<native>-l partition=tjet:ujet:sjet:vjet:xjet -W umask=022</native>'>
<!--	<deadline><cyclestr offset="&DEADLINE;">@Y@m@d@H@M</cyclestr></deadline>'>-->

    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <queue>&PE_SERVICE;</queue>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&SERVICE_WALL_LIMIT;</walltime>
	<native>-l partition=service -W umask=022</native>'>
<!--	<deadline><cyclestr offset="&DEADLINE;">@Y@m@d@H@M</cyclestr></deadline>'>-->

    <!ENTITY YMDH
       '<envar>
          <name>YEAR</name>
          <value><cyclestr>@Y</cyclestr></value>
        </envar>
        <envar>
          <name>MONTH</name>
          <value><cyclestr>@m</cyclestr></value>
        </envar>
        <envar>
          <name>DAY</name>
          <value><cyclestr>@d</cyclestr></value>
        </envar>
        <envar>
          <name>HOUR</name>
          <value><cyclestr>@H</cyclestr></value>
        </envar>'>
	
    <!ENTITY YMDH14400
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr offset="-14400">@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr offset="-14400">@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr offset="-14400">@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr offset="-14400">@H</cyclestr></value>
	</envar>'>
]>

<workflow realtime="F" scheduler="moabtorque" cyclethrottle="6" cyclelifespan="0:03:00:00">

  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <cycledef group="1hr">201812260000 201901290000 01:00:00</cycledef>

  <task name="cref_hpss_pull" cycledefs="1hr" maxtries="4">
    <command>&SCRIPT_DIR;/grab_cref_etp_vil_hpss.py</command>
    <jobname>cref_hpss</jobname>
    <join><cyclestr>&WF_LOG_DIR;/cref_backfill_hpss_@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>HPSSDIR</name>
      <value>&HPSS_DIR;</value>
    </envar>
    <envar>
      <name>VERIFTYPE</name>
      <value>cref</value>
    </envar>
    <envar>
      <name>MODELNAMES</name>
      <value>HRRR_dev3</value>
    </envar>

  </task>

  <task name="cref_db" cycledefs="1hr" maxtries="4">    
    <command>&SCRIPT_DIR;/pop_cref_sql_tables.py</command>
    <jobname>cref_db</jobname>
    <join><cyclestr>&WF_LOG_DIR;/cref_backfill_db_@Y@m@d@H.log</cyclestr></join>
        
    &SERVICE_OPTS;
    &YMDH;
        
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;/cref</value>
    </envar>
    <envar>
      <name>LINES</name>
      <value>261</value>
    </envar>
    <envar>
      <name>MODELDIRS</name>
      <value>HRRR_dev3/backfill</value>
    </envar>
    <envar>
      <name>MODELNAMES</name>
      <value>HRRR_dev3</value>
    </envar>
    <envar>
      <name>GRIDS</name>
      <value>03km 13km 20km 40km 80km</value>
    </envar>
  
    <dependency>
      <taskdep task="cref_hpss_pull"/>
    </dependency>
    
  </task>

  <task name="cref_purge" cycledefs="1hr" maxtries="4">    
    <command>&SCRIPT_DIR;/backfill_purge.py</command>
    <jobname>cref_purge</jobname>
    <join><cyclestr offset="-14400">&WF_LOG_DIR;/cref_backfill_purge_@Y@m@d@H.log</cyclestr></join>
        
    &SERVICE_OPTS;
    &YMDH14400;

    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;/cref</value>
    </envar>
    <envar>
      <name>MODELDIRS</name>
      <value>HRRR_dev3/backfill</value>
    </envar>
    <envar>
      <name>MODELNAMES</name>
      <value>HRRR_dev3</value>
    </envar>

    <dependency>
      <taskdep task="cref_db"/>
    </dependency>

  </task>

</workflow>
