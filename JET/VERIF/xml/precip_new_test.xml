  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <task name="StageIV_interp" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>StageIV_interp</jobname>
    <join><cyclestr offset="-86400">&OBS_LOG_DIR;/StageIV_interp_@Y@m@d@H.log</cyclestr></join>

    &PE_OPTS;    
    &YMDH86400;
    
    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/StageIV_interp2.py</value>
    </envar>
    <envar>
    <name>EXECDIR</name>
