<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/ensemble/bin">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/ensemble/verif/precip/log">
    <!ENTITY MAIN_DIR "/home/amb-verif/ensemble/verif/precip">
    <!ENTITY WEB_DIR "/home/amb-verif/ensemble/verif/web">
    <!ENTITY CONFIG_DIR "/home/amb-verif/ensemble/config">
    <!ENTITY MET_DIR "/contrib/met/9.0/">
    
    <!ENTITY METAR_REALTIME_DIR "/home/amb-verif/ensemble/verif/surface/METAR/realtime">
    <!ENTITY METAR_LOG_DIR "/home/amb-verif/ensemble/verif/surface/METAR/log">
    <!ENTITY METAR_DIR "/public/data/madis/point/metar/netcdf">
    
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE "tjet:ujet:sjet:vjet:xjet">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY PE_WALL_LIMIT "00:40:00">
    <!ENTITY SERVICE_WALL_LIMIT "00:10:00">
    <!ENTITY DEADLINE "21600">
    <!ENTITY WAIT "3600">
    
    <!ENTITY PE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&PE_WALL_LIMIT;</walltime>
        <deadline><cyclestr offset="&DEADLINE;">@Y@m@d@H@M</cyclestr></deadline>'>

    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>6G</memory>
	<walltime>&SERVICE_WALL_LIMIT;</walltime>
        <deadline><cyclestr offset="&DEADLINE;">@Y@m@d@H@M</cyclestr></deadline>'>	

    <!ENTITY YMDH10800
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr offset="-10800">@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr offset="-10800">@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr offset="-10800">@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr offset="-10800">@H</cyclestr></value>
	</envar>
	<envar>
	  <name>YYYYMMDDHH</name>
	  <value><cyclestr offset="-10800">@Y@m@d@H</cyclestr></value>
	</envar>'>

    <!ENTITY YMDH86400
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr offset="-86400">@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr offset="-86400">@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr offset="-86400">@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr offset="-86400">@H</cyclestr></value>
	</envar>
	<envar>
	  <name>YYYYMMDDHH</name>
	  <value><cyclestr offset="-86400">@Y@m@d@H</cyclestr></value>
	</envar>'>

]>

<workflow realtime="T" scheduler="slurm" cyclethrottle="6" cyclelifespan="0:01:00:00">

  <cycledef group="1hr">0 * * * 2023-2029 *</cycledef>
  
  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <task name="METAR_surface_init" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>METAR_surface_init</jobname>
    <join><cyclestr offset="-10800">&METAR_LOG_DIR;/METAR_surface_init_@Y@m@d@H.log</cyclestr></join>

    &PE_OPTS;
    &YMDH10800;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/ensemble_madis2nc.py</value>
    </envar>
    <envar>
      <name>MET_DIR</name>
      <value>&MET_DIR;</value>
    </envar>
    <envar>
      <name>OBSDIR</name>
      <value>&METAR_DIR;</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&METAR_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>NETWORK</name>
      <value>metar</value>
    </envar>

    <dependency>
      <and>
        <datadep age="120"><cyclestr offset="-10800">&METAR_DIR;/@Y@m@d_@H00</cyclestr></datadep>
      </and>
    </dependency>

  </task>

</workflow>
