    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/mvprocessing.py</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>MVLOADER_DIR</name>
      <value>&MVLOADER_DIR;</value>
    </envar>
    <envar>
      <name>METVIEWER_DIR</name>
      <value>&METVIEWER_DIR;</value>
    </envar>
    <envar>
      <name>DATA_DIRS</name>
      <value>HRRREvStageIV/realtime HREFvStageIV/realtime</value>
    </envar>
    <envar>
      <name>DATA_TYPE</name>
      <value>grid_stat</value>
    </envar>
    <envar>
      <name>MODELS</name>
      <value>HRRRE HREF</value>
    </envar>
    <envar>
      <name>CFG_DIR</name>
      <value>&CONFIG_DIR;</value>
    </envar>
    <envar>
      <name>CFG_XML</name>
      <value>mv_load_gsd_modelvxtest.xml</value>
    </envar>

  </task> 

  <task name="precip_gsd_db" cycledefs="6hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>precip_prob_precip_gsd_db</jobname>
    <join><cyclestr>&WF_LOG_DIR;/precip_prob_precip_gsd_db_@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/mvprocessing.py</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>MVLOADER_DIR</name>
      <value>&MVLOADER_DIR;</value>
    </envar>
    <envar>
      <name>METVIEWER_DIR</name>
      <value>&METVIEWER_DIR;</value>
    </envar>
    <envar>
      <name>DATA_DIRS</name>
      <value>HRRREvStageIV/realtime HREFvStageIV/realtime</value>
    </envar>
    <envar>
      <name>DATA_TYPE</name>
      <value>grid_stat</value>
    </envar>
    <envar>
      <name>MODELS</name>
      <value>HRRRE HREF</value>
    </envar>
    <envar>
      <name>CFG_DIR</name>
      <value>&CONFIG_DIR;</value>
    </envar>
    <envar>
      <name>CFG_XML</name>
      <value>mv_load_gsd.xml</value>
    </envar>


  </task>
</workflow>
