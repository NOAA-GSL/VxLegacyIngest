<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/ensemble/bin">
    <!ENTITY EXEC_DIR "/lfs1/BMC/dtc-hurr/MET/MET_releases/8.0/bin/">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/ensemble/verif/precip/log">
