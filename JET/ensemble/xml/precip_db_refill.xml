    <!ENTITY MVLOADER_DIR "/home/amb-verif/metviewer/mvloader">
    
    <!ENTITY CYCDEFS "6hr">
    <!ENTITY TDIFF "3600">

    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE "tjet:ujet:sjet:vjet:xjet">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY PE_WALL_LIMIT "00:40:00">
    <!ENTITY SERVICE_WALL_LIMIT "00:40:00">
    <!ENTITY DEADLINE "21600">
    <!ENTITY WAIT "3600">
    
    <!ENTITY PE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&PE_WALL_LIMIT;</walltime>'>

    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>6G</memory>
	<walltime>&SERVICE_WALL_LIMIT;</walltime>'>
	
    <!ENTITY YMDH
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr>@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr>@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr>@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr>@H</cyclestr></value>
	</envar>'>

]>

<workflow realtime="F" scheduler="slurm" cyclethrottle="12" cyclelifespan="0:00:30:00">

  <cycledef group="6hr">201910010000 201912190000 6:00:00</cycledef>
  
