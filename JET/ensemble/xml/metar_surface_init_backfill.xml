<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/ensemble/bin">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/ensemble/verif/precip/log">
    <!ENTITY MAIN_DIR "/home/amb-verif/ensemble/verif/precip">
    <!ENTITY WEB_DIR "/home/amb-verif/ensemble/verif/web">
    <!ENTITY CONFIG_DIR "/home/amb-verif/ensemble/config">
    <!ENTITY MET_DIR "/contrib/met/9.0/">
    
    <!ENTITY METAR_REALTIME_DIR "/home/amb-verif/ensemble/verif/surface/METAR/realtime">
    <!ENTITY METAR_LOG_DIR "/home/amb-verif/ensemble/verif/surface/METAR/log">
    <!ENTITY METAR_DIR "/lfs1/BMC/amb-verif/metar">
    
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE "tjet:ujet:sjet:vjet:xjet">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY PE_WALL_LIMIT "00:40:00">
    <!ENTITY SERVICE_WALL_LIMIT "00:10:00">
    <!ENTITY DEADLINE "21600">
    <!ENTITY WAIT "3600">
    
    <!ENTITY PE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&PE_WALL_LIMIT;</walltime>'>

    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>6G</memory>
	<walltime>&SERVICE_WALL_LIMIT;</walltime>'>

    <!ENTITY YMDH
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr>@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr>@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr>@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr>@H</cyclestr></value>
	</envar>
	<envar>
	  <name>YYYYMMDDHH</name>
	  <value><cyclestr>@Y@m@d@H</cyclestr></value>
	</envar>'>

]>

<workflow realtime="F" scheduler="slurm" cyclethrottle="6" cyclelifespan="0:06:00:00">

  <cycledef group="1hr">201910150100 201910312300 1:00:00</cycledef>
  
  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <task name="METAR_surface_init" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>METAR_surface_init</jobname>
    <join><cyclestr>&METAR_LOG_DIR;/METAR_surface_init_@Y@m@d@H.log</cyclestr></join>

    &PE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/ensemble_madis2nc.py</value>
    </envar>
    <envar>
      <name>MET_DIR</name>
      <value>&MET_DIR;</value>
    </envar>
    <envar>
      <name>OBSDIR</name>
      <value>&METAR_DIR;</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&METAR_REALTIME_DIR;</value>
    </envar>
    <envar>
      <name>NETWORK</name>
      <value>metar</value>
    </envar>

    <dependency>
      <and>
        <datadep age="120"><cyclestr>&METAR_DIR;/@Y@m@d_@H00</cyclestr></datadep>
      </and>
    </dependency>

  </task>

</workflow>
