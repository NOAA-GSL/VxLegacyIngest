<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow [

    <!ENTITY SCRIPT_DIR "/home/amb-verif/ensemble/bin">
    <!ENTITY WF_LOG_DIR "/home/amb-verif/ensemble/verif/cref/log">
    <!ENTITY MAIN_DIR "/home/amb-verif/ensemble/verif/cref">
    <!ENTITY WEB_DIR "/home/amb-verif/ensemble/verif/web">
    <!ENTITY CONFIG_DIR "/home/amb-verif/ensemble/config">
    <!ENTITY MET_DIR "/contrib/met/9.0/">
    <!ENTITY MET_BASE "/contrib/met/9.0/share/met/">
    <!ENTITY METPLUS_DIR "/lfs1/BMC/amb-verif/METplus_ensemble/METplus">
    <!ENTITY METVIEWER_DIR "/home/amb-verif/metviewer/v2.10_int/metviewer">
    <!ENTITY MVLOADER_DIR "/home/amb-verif/metviewer/mvloader">
    
    <!ENTITY OBS_REALTIME_DIR "/home/amb-verif/VERIF/verif/cref/NSSL/realtime">
    
    <!ENTITY HRRRE_REALTIME_DIR "/home/amb-verif/ensemble/verif/cref/HRRRE/realtime">
    <!ENTITY HRRRE_LOG_DIR "/home/amb-verif/ensemble/verif/cref/HRRRE/log">
    
    <!ENTITY HREF_REALTIME_DIR "/home/amb-verif/ensemble/verif/cref/HREF/realtime">
    <!ENTITY HREF_LOG_DIR "/home/amb-verif/ensemble/verif/cref/HREF/log">
   
    <!ENTITY CYCDEFS "1hr">
 
    <!ENTITY PROJECT "amb-verif">
    <!ENTITY PE "tjet:ujet:sjet:vjet:xjet">
    <!ENTITY PE_SERVICE "service">
    <!ENTITY PE_WALL_LIMIT "00:40:00">
    <!ENTITY SERVICE_WALL_LIMIT "00:40:00">
    <!ENTITY DEADLINE "43200">
    <!ENTITY WAIT "3600">
    
    <!ENTITY PE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE;</partition>
        <cores>1</cores>
	<memory>2G</memory>
	<walltime>&PE_WALL_LIMIT;</walltime>'>

    <!ENTITY SERVICE_OPTS 
       '<account>&PROJECT;</account>
        <partition>&PE_SERVICE;</partition>
        <cores>1</cores>
	<memory>6G</memory>
	<walltime>&SERVICE_WALL_LIMIT;</walltime>'>
	
    <!ENTITY YMDH
       '<envar>
	  <name>YEAR</name>
	  <value><cyclestr>@Y</cyclestr></value>
	</envar>
	<envar>
	  <name>MONTH</name>
	  <value><cyclestr>@m</cyclestr></value>
	</envar>
	<envar>
	  <name>DAY</name>
	  <value><cyclestr>@d</cyclestr></value>
	</envar>
	<envar>
	  <name>HOUR</name>
	  <value><cyclestr>@H</cyclestr></value>
	</envar>
	<envar>
	  <name>YYYYMMDDHH</name>
	  <value><cyclestr>@Y@m@d@H</cyclestr></value>
	</envar>'>

]>

<workflow realtime="F" scheduler="slurm" cyclethrottle="6" cyclelifespan="0:06:00:00">

  <cycledef group="1hr">201910010000 201910010000 01:00:00</cycledef>
  
  <log><cyclestr>&WF_LOG_DIR;/workflow_@Y@m@d@H.log</cyclestr></log>

  <task name="vxt_db" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>vxt_db</jobname>
    <join><cyclestr>&WF_LOG_DIR;/vxt_db_@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/mvprocessing.py</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>MVLOADER_DIR</name>
      <value>&MVLOADER_DIR;</value>
    </envar>
    <envar>
      <name>METVIEWER_DIR</name>
      <value>&METVIEWER_DIR;</value>
    </envar>
    <envar>
      <name>DATA_DIRS</name>
      <value>HRRRE/realtime HREF/realtime</value>
    </envar>
    <envar>
      <name>DATA_TYPE</name>
      <value>ensemble_stat</value>
    </envar>
    <envar>
      <name>MODELS</name>
      <value>HRRRE HREF</value>
    </envar>
    <envar>
      <name>CFG_DIR</name>
      <value>&CONFIG_DIR;</value>
    </envar>
    <envar>
      <name>CFG_XML</name>
      <value>mv_load_gsd_modelvxtest_db_rebuild.xml</value>
    </envar>

  </task> 

  <task name="gsd_db" cycledefs="1hr" maxtries="2">
    <command>&SCRIPT_DIR;/wrapper.ksh</command>
    <jobname>gsd_db</jobname>
    <join><cyclestr>&WF_LOG_DIR;/gsd_db_@Y@m@d@H.log</cyclestr></join>

    &SERVICE_OPTS;
    &YMDH;

    <envar>
      <name>SCRIPT</name>
      <value>&SCRIPT_DIR;/mvprocessing.py</value>
    </envar>
    <envar>
      <name>REALTIMEDIR</name>
      <value>&MAIN_DIR;</value>
    </envar>
    <envar>
      <name>MVLOADER_DIR</name>
      <value>&MVLOADER_DIR;</value>
    </envar>
    <envar>
      <name>METVIEWER_DIR</name>
      <value>&METVIEWER_DIR;</value>
    </envar>
    <envar>
      <name>DATA_DIRS</name>
      <value>HRRRE/realtime HREF/realtime</value>
    </envar>
    <envar>
      <name>DATA_TYPE</name>
      <value>ensemble_stat</value>
    </envar>
    <envar>
      <name>MODELS</name>
      <value>HRRRE HREF</value>
    </envar>
    <envar>
      <name>CFG_DIR</name>
      <value>&CONFIG_DIR;</value>
    </envar>
    <envar>
      <name>CFG_XML</name>
      <value>mv_load_gsd_db_rebuild.xml</value>
    </envar>

  </task>

</workflow>
